{
  "installCommand": "npm ci",
  "buildCommand": "npm run type-check && if [ \"$VERCEL_ENV\" = \"production\" ]; then npm run build:production; else npm run build:staging; fi",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/n8n-webhook.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
